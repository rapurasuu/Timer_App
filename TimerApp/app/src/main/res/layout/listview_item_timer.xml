<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView android:id="@+id/textView_timerName"
              android:text="@string/dummy_text"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
              android:layout_marginTop="10dp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView android:id="@+id/textView_noch"
              android:text="@string/textView_stillXTime"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              app:layout_constraintTop_toBottomOf="@+id/textView_timerName"
              app:layout_constraintLeft_toLeftOf="@+id/textView_timerName"/>

    <TextView android:id="@+id/textView_bis"
              android:text="@string/textView_untilXTime"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:paddingBottom="10dp"
              app:layout_constraintTop_toBottomOf="@id/textView_noch"
              app:layout_constraintLeft_toLeftOf="@id/textView_noch"/>

    <Button android:id="@+id/button_deleteTimer"
            android:text="@string/button_delete_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/textView_timerName"
            app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>